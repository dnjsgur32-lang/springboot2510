<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ljh.mybatis_books.mapper.BookMapper">
<!--전체 조회-->
    <select id="findAll" resultType="Book">
        SELECT * from book ORDER BY id DESC
    </select>
<!--단건 조회-->
    <select id="findById" parameterType="long" resultType="Book">
        SELECT * FROM book WHERE id = #{id}
    </select>

<!--    추가-->
    <insert id="insert" parameterType="Book" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO book (title, author, price, stock)
        VALUES (#{title}, #{author}, #{price}, #{stock})
    </insert>
<!--    정보 수정-->
    <update id="update" parameterType="Book">
        UPDATE book
        SET title = #{title}, #{author}, #{price}, #{stock}
        WHERE id = #{id}
    </update>
    <!--    정보 삭제-->
    <delete id="delete" parameterType="long">
        DELETE FROM book
        WHERE id = #{id}
    </delete>

</mapper>